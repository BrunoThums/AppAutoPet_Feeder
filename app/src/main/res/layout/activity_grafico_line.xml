<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:screenOrientation="landscape"
    tools:context=".GraficoLineActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textViewIniciaoGraficoLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio: " />

        <TextView
            android:id="@+id/textDataInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableRight="@drawable/calendario3"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="88/88/8888" />

        <TextView
            android:id="@+id/textViewFimgraficoLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Fim: " />

        <TextView
            android:id="@+id/textDataFim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/calendario3"
            android:gravity="center"
            android:text="88/88/8888" />

        <Button
            android:id="@+id/btn_atualizargraficoLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Ir" />

    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart

        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header" />

</RelativeLayout>